{
  "ConnectionStrings": {
    "DefaultConnection": "PLACEHOLDER_CONNECTION_STRING"
  },
  "Jwt": {
    "Key": "PLACEHOLDER_JWT_KEY",
    "Issuer": "SegurosApp.API",
    "Audience": "SegurosApp.Client",
    "ExpiryInHours": 24
  },
  "AzureDocumentIntelligence": {
    "Endpoint": "PLACEHOLDER_AZURE_ENDPOINT",
    "ApiKey": "PLACEHOLDER_AZURE_KEY",
    "ModelId": "poliza_vehiculos_bse"
  },
  "VelneoAPI": {
    "BaseUrl": "PLACEHOLDER_VELNEO_URL",
    "ApiKey": "PLACEHOLDER_VELNEO_KEY",
    "TimeoutSeconds": 30,
    "ApiVersion": "v1"
  },
  "FileStorage": {
    "ContainerName": "poliza-pdfs",
    "MaxFileSizeMB": 10,
    "AllowedExtensions": [ ".pdf" ],
    "LocalPath": "uploads/pdfs"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "SegurosApp.API": "Information"
    }
  },
  "AllowedHosts": "*"
}